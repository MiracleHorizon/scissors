{
  "name": "scissors",
  "private": true,
  "type": "module",
  "description": "Your awesome application for versatile image formatting and processing!",
  "author": "MiracleHorizon",
  "authorGithub": "https://github.com/MiracleHorizon",
  "repository": "https://github.com/MiracleHorizon/scissors",
  "license": "MIT",
  "packageManager": "pnpm@9.6.0",
  "workspaces": [
    "@apps/*",
    "@packages/*"
  ],
  "engines": {
    "node": ">= 20"
  },
  "scripts": {
    "build": "turbo build",
    "build:packages": "turbo build --filter='./@packages/*'",
    "start": "turbo start",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "prepare": "husky",
    "lint:lastcommit": "commitlint --from=HEAD~1 --to=HEAD"
  },
  "devDependencies": {
    "@commitlint/cli": "19.3.0",
    "@commitlint/config-conventional": "19.2.2",
    "@eslint/js": "9.8.0",
    "eslint": "9.8.0",
    "eslint-config-prettier": "9.1.0",
    "eslint-plugin-prettier": "5.2.1",
    "globals": "15.9.0",
    "husky": "9.0.11",
    "prettier": "3.2.5",
    "turbo": "2.0.11",
    "typescript": "5.4.5",
    "typescript-eslint": "8.0.0",
    "vite": "5.2.8"
  },
  "overrides": {
    "eslint": "9.8.0"
  },
  "keywords": [
    "image",
    "converter",
    "rotation",
    "crop",
    "resizing",
    "blur",
    "gamma",
    "scissors",
    "jpeg",
    "jpg",
    "png",
    "webp",
    "avif",
    "gif"
  ]
}
