{
  "name": "scissors",
  "private": true,
  "type": "module",
  "description": "Your awesome application for versatile image formatting and processing!",
  "author": "MiracleHorizon",
  "authorGithub": "https://github.com/MiracleHorizon",
  "repository": "https://github.com/MiracleHorizon/scissors",
  "license": "MIT",
  "packageManager": "pnpm@10.10.0",
  "workspaces": [
    "@apps/*",
    "@packages/*"
  ],
  "engines": {
    "node": ">= 20"
  },
  "scripts": {
    "build": "turbo build",
    "build:packages": "turbo build --filter='./@packages/*'",
    "start": "turbo start",
    "start:backend": "turbo start --filter='./@apps/*' --filter='!./@apps/frontend'",
    "dev": "turbo dev",
    "dev:backend": "turbo dev --filter='./@apps/*' --filter='!./@apps/frontend'",
    "lint": "turbo lint",
    "prepare": "husky"
  },
  "devDependencies": {
    "@eslint/js": "9.25.1",
    "eslint": "9.25.1",
    "eslint-config-prettier": "10.1.2",
    "eslint-plugin-prettier": "5.2.6",
    "globals": "16.0.0",
    "husky": "9.1.7",
    "prettier": "3.5.3",
    "turbo": "2.5.2",
    "typescript": "5.8.3",
    "typescript-eslint": "8.31.1",
    "vite": "6.3.4"
  },
  "keywords": [
    "image",
    "converter",
    "rotation",
    "crop",
    "resizing",
    "blur",
    "gamma",
    "scissors",
    "jpeg",
    "jpg",
    "png",
    "webp",
    "avif",
    "gif"
  ]
}
