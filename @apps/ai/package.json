{
  "name": "ai",
  "main": "./src/index.ts",
  "type": "module",
  "scripts": {
    "dev": "bun --env-file=../../.env.development run --watch ./src/index.ts",
    "start": "bun --env-file=../../.env.production --bun ./src/index.ts",
    "prebuild": "tsc --noEmit",
    "build": "bun build --compile --minify --sourcemap ./src/index.ts --outfile=./.out/ai"
  },
  "dependencies": {
    "@scissors/sharp": "workspace:*"
  },
  "devDependencies": {
    "@types/bun": "1.2.11"
  },
  "peerDependencies": {
    "typescript": "5.8.3"
  }
} 
